// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"] // <- neon.tech
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Newsletter {
  id             String   @id @default(cuid())
  subject        String
  content        String   @db.Text
  htmlContent    String   @db.Text
  previewContent String   @db.Text
  cleanHtml      String   @db.Text
  fromEmail      String
  receivedAt     DateTime
  createdAt      DateTime @default(now())
}

model PageView {
  id         String   @id @default(cuid())
  path       String
  userAgent  String?
  referer    String?
  ip         String?  // Storing IP in hashed form is recommended for privacy
  sessionId  String?
  createdAt  DateTime @default(now())
}

model Referral {
  id         String   @id @default(cuid())
  source     String   // e.g., "ss" for Socratica Symposium
  userAgent  String?
  ip         String?  // Storing IP in hashed form is recommended for privacy
  sessionId  String?
  createdAt  DateTime @default(now())
}
